@page "/counter-example-les"
<h3>Counter Example Les</h3>

<CounterExample Initial="10" Increment="5"
                OnCountIncremented="CountIncrement"
                ConditionToFireEvent="@(count => count % 10 == 0)">
    <CounterText>
        <h2 style="color: red;">@context</h2>
    </CounterText>
</CounterExample>
<hr>
<p>Count from event: @_countFromEvent</p>


@code {
    private int _countFromEvent = -1;

    private void CountIncrement(int value)
    {
        _countFromEvent = value;
    }

}